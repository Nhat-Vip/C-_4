                    <h4 class="text-center text-black fw-bold">Tạo loại vé mới</h4>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" value="" id="IdShowTime">
                    <div class="mb-4 mt-3">
                        <label for="ticketName" class="form-label">Tên vé</label>
                        <input type="text" id="ticketName" class="form-control">
                    </div>
                    <div class="row mb-4">
                        <div class="col-4">
                            <label for="Price" class="form-label">Giá vé</label>
                            <input type="text" id="Price" class="form-control">
                        </div>
                        <div class="col-4">
                            <label for="SeatGroup" class="form-label">Chọn nhóm ghế</label>
                            <select id="SeatGroup" class="form-select">
                                <option value="A">Nhóm A</option>
                                <option value="B">Nhóm B</option>
                                <option value="C">Nhóm C</option>
                            </select>
                        </div>
                        <div class="col-4">
                            <label for="MaxTicket" class="form-label">Giới hạn số lượng vé trong 1 lần mua</label>
                            <input type="text" id="MaxTicket" class="form-control">
                        </div>
                    </div>
                    <div class="d-flex mb-4">
                        <div class="w-100 me-3">
                            <label for="TicketSaleStart" class="form-label">Thời gian bắt đầu bán vé</label>
                            <input type="datetime-local" id="TicketSaleStart" class="form-control">
                        </div>
                        <div class="w-100">
                            <label for="TicketSaleEnd" class="form-label">Thời gian kết thúc bán vé</label>
                            <input type="datetime-local" id="TicketSaleEnd" class="form-control">
                        </div>
                    </div>
                    <div class="mb-3">
                        <button type="button" class="btn w-100 btn-success fw-bold" onclick="saveTicket()" data-bs-dismiss="modal">Lưu</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
@section Scripts{

    <script src="/js/SeatingChart.js"></script>
    <script>
        var TabControl = ['[data-bs-target="#EventInfo"]', '[data-bs-target="#EventSeatingChart"]', '[data-bs-target="#EventTicket"]', '[data-bs-target="#EventPayment"]']
        var tabIndex = 0;
        var showTime = [{ShowTime:1,ticketGroup:0}];
        var ticketGroup = [];

        const Next = () =>{
            tabIndex = (tabIndex + 1) % 4;
            const tabTrigger = document.querySelector(`${TabControl[tabIndex]}`);
            console.log(TabControl[tabIndex]);
            console.log(tabTrigger);
            const tab = new bootstrap.Tab(tabTrigger);
            tab.show();
        }

        const openAddModal = (id) =>{
            const modalElement = document.getElementById('CreateTicket');
            const modal = new bootstrap.Modal(modalElement);
            document.getElementById("IdShowTime").value = id;
            console.log("Modal: ",id);
            modal.show();
        }
        const saveTicket = () =>{
            const id = document.getElementById("IdShowTime").value;
            const tkName = document.getElementById("ticketName").value;
            const price = document.getElementById("Price").value;
            const seatGruop = document.getElementById("SeatGroup").value;
            const maxTicket = document.getElementById("MaxTicket").value;
            const startTime = document.getElementById("TicketSaleStart").value;
            const endTime = document.getElementById("TicketSaleEnd").value;


            const ticketIndex = showTime.find(s=>s.ShowTime == id.replace("ShowTime",''));

            const container = document.querySelector(`#${id} #TicketGroupContainer`);
            // console.log(container);
            const ticketHtml = `
                <div class="d-flex mb-3 justify-content-between align-items-center p-2 rounded-3" style="box-shadow: 0 0 5px black;">
                    <p class="text-black fw-bold m-0"><i class="fa-solid fa-ticket"></i>${tkName}</p>
                    <div>
                        <button class="btn btn-warning">Sua</button>
                        <button class="btn btn-danger">Xoa</button>
                    </div>
                    <input type="hidden" name="ShowTimeTicketGroups[${ticketIndex.ticketGroup}].ProductName" value="${tkName}" />
                    <input type="hidden" name="ShowTimeTicketGroups[${ticketIndex.ticketGroup}].ProductName" value="${price}" />
                    <input type="hidden" name="ShowTimeTicketGroups[${ticketIndex.ticketGroup}].ProductName" value="${seatGruop}" />
                    <input type="hidden" name="ShowTimeTicketGroups[${ticketIndex.ticketGroup}].ProductName" value="${maxTicket}" />
                    <input type="hidden" name="ShowTimeTicketGroups[${ticketIndex.ticketGroup}].ProductName" value="${startTime}" />
                    <input type="hidden" name="ShowTimeTicketGroups[${ticketIndex.ticketGroup}].ProductName" value="${endTime}" />
                </div>
            `

            container.insertAdjacentHTML("beforeend", ticketHtml);
            ticketIndex.ticketGroup++;
        }

        const AddShowTime = () =>{
            const container = document.getElementById("ShowTime");
            const index = showTime.length + 1;
            const showTimeHtml = 
            `
                <div class="card mb-3">
                    <div class="card-header d-flex justify-content-between">
                        <a href="#ShowTime${index}" class="btn w-75 text-start" data-bs-toggle="collapse" >Vui lòng nhập thông tin xuất chiếu</a>
                        <button type="button" class=" btn btn-danger">Xóa</button>
                    </div>
                    <div class="collapse" id="ShowTime${index}" data-bs-parent="#ShowTime">
                        <div class="card-body">
                            <div class="d-flex">
                                <div class="mb-3 w-100 me-3 mt-3">
                                    <label for="showTimeStart" class="form-label" >Thời gian bắt đầu</label>
                                    <input type="datetime-local" id="showTimeStart" onchange="ShowTimeStart(this,'ShowTime${index}')" class="form-control">
                                </div>
                                <div class="mb-5 w-100 mt-3">
                                    <label for="showTimeEnd" class="form-label">Thời gian kết thúc</label>
                                    <input type="datetime-local" id="showTimeEnd" onchange="ShowTimeEnd(this,'ShowTime${index}')" class="form-control">
                                </div>
                            </div>
                            <div class="mb-3" id="TicketGroupContainer">
                                <div class="d-flex mb-3 justify-content-between align-items-center p-2 rounded-3" style="box-shadow: 0 0 5px black;">
                                    <p class="text-black fw-bold m-0"><i class="fa-solid fa-ticket"></i>Ten ve</p>
                                    <div>
                                        <button class="btn btn-warning">Sua</button>
                                        <button class="btn btn-danger">Xoa</button>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <button class="btn-showTime fw-bold" onclick="openAddModal('ShowTime${index}')">Thêm loại vé</button>
                            </div>
                        </div>
                    </div>
                </div>
            `

            container.insertAdjacentHTML("beforeend",showTimeHtml);

            showTime.push({ShowTime:index,ticketGroup:0});
        }

        const PreviewImg = (input) =>{
            const preview = document.getElementById("preview");
            const file = input.files[0];
            if(file ){
                const reader = new FileReader();

                reader.onload = function(e){
                    preview.src = e.target.result;
                    preview.style.display = "block";
                }

                reader.readAsDataURL(file);
            }
        }
        const ShowTimeStart = (e,id)=>{
            let title =  document.querySelector(`[href="#${id}"]`);
            title.innerHTML = e.value
        }


    </script>
}
