@using System.Globalization
@model List<ShowTimeSeatDto>
@{
    var listSeats = Model.GroupBy(s=>s.grName);
    var total = Model.Sum(s=>s.Price);
}
@section Styles{
    <style>
        .seat-table{
            max-height: 70vh;
            overflow-y: scroll;
        }
    </style>
}
@if(TempData["Error"]!=null){
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<h2>Xác nhận thanh toán</h2>

<div class="row mb-3 d-flex p-4 justify-content-center align-items-start">
    <div class="col-8 mb-3 seat-table" style="box-shadow: 0 0 10px rgb(78, 28, 28);">
        <table class="table">
            <thead>
                <tr>
                    <th>Ghế</th>
                    <th>Nhóm</th>
                    <th>Giá</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var group in listSeats)
                {
                    <tr class="table-secondary">
                        <td colspan="3"><strong>Nhóm: @group.Key</strong></td>
                    </tr>

                    foreach (var seat in group)
                    {
                        <tr>
                            <td>@seat.Name</td>
                            <td>@seat.grName</td>
                            <td>@seat.Price.ToString("C0",new CultureInfo("vi-VN"))</td>
                        </tr>
                    }
                }

            </tbody>
        </table>

    </div>
    <div class="d-flex justify-content-end col-8" >

        <form method="post" asp-action="Index" class="d-flex flex-column rounded-2 w-50 p-4" style="box-shadow: 0 0 10px rgb(78, 28, 28);">
            <span class="fw-bold mb-2 text-end"><strong>Tổng:</strong> @total.ToString("C0",new CultureInfo("vi-VN"))</span>
            @for (int i = 0; i < Model.Count; i++)
            {
                <input type="hidden" name="seats[@i].SeatId" value="@Model[i].SeatId" />
                <input type="hidden" name="seats[@i].ShowTimeId" value="@Model[i].ShowTimeId" />
                <input type="hidden" name="seats[@i].Price" value="@Model[i].Price" />
                <input type="hidden" name="seats[@i].Name" value="@Model[i].Name" />
                <input type="hidden" name="seats[@i].grName" value="@Model[i].grName" />
            }
            <button type="submit" class="btn w-100 btn-success">Xác nhận & Thanh toán</button>
        </form>

    </div>
</div>

