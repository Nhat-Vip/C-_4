@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />

    <style>
        body {
            background: url('https://images.unsplash.com/photo-1542744173-8e7e53415bb0') no-repeat center center fixed;
            background-size: cover;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        #form-login {
            background-color: rgba(0, 0, 0, 0.7);
            padding: 35px 30px;
            border-radius: 12px;
            max-width: 380px;
            margin: 80px auto;
            color: white;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(6px);
        }

        #form-login .form-heading {
            text-align: center;
            margin-bottom: 25px;
            font-weight: bold;
            font-size: 26px;
            letter-spacing: 1px;
        }

        .form-group {
            position: relative;
            margin-bottom: 25px;
        }

        .form-group i {
            position: absolute;
            top: 50%;
            left: 12px;
            transform: translateY(-50%);
            color: #aaa;
            font-size: 15px;
        }

        .form-control {
            background: transparent;
            border: none;
            border-bottom: 2px solid #fff;
            border-radius: 0;
            color: white;
            padding-left: 38px;
            padding-right: 10px;
            height: 42px;
            font-size: 15px;
            transition: border-color 0.3s ease;
        }

        .form-control:focus {
            outline: none;
            border-bottom-color: #4CAF50;
        }

        .form-control::placeholder {
            color: #ccc;
        }

        .small-links {
            text-align: center;
            font-size: 14px;
            margin-bottom: 15px;
        }

        .small-links a {
            color: #4CAF50;
            text-decoration: none;
            font-weight: 500;
        }

        .small-links a:hover {
            text-decoration: underline;
        }

        .form-submit {
            width: 100%;
            border: none;
            background: #4CAF50;
            color: white;
            padding: 12px;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            transition: background 0.3s;
        }

        .form-submit:hover {
            background: #45a049;
        }
    </style>
</head>
<body>
    <form asp-action="Login" asp-controller="Login" method="post" id="form-login">
        <h1 class="form-heading">Form đăng nhập</h1>

        <div class="form-group">
            <i class="fas fa-user"></i>
            <input type="text" name="username" class="form-control" placeholder="Tên đăng nhập" required />
        </div>

        <div class="form-group">
            <i class="fas fa-key"></i>
            <input type="password" name="password" class="form-control" placeholder="Mật khẩu" required />
        </div>

        <div class="small-links">
            Chưa có tài khoản? <a href="/Home/Privacy">SignUp now</a>
        </div>

        <input type="submit" value="Đăng nhập" class="form-submit" />
    </form>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
