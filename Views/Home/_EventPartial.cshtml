@model IEnumerable<Event>
@foreach(var item in Model){
    <div class="col-6 col-lg-3 event-item" style="height: max-content;">
        <a asp-action="Details" asp-route-id="@item.EventId" class="text-decoration-none text-black" asp-controller="Event">
            <div class="card event-card h-100 border-0 shadow-sm">
                <div class="position-relative overflow-hidden rounded-top">
                    <img src="@item.Image" class="card-img-top img-fluid event-img" alt="@item.EventName">
                </div>
                <div class="card-body p-3">
                    <span class="badge rounded-pill px-3 py-2 text-dark bg-pink-light">
                        @item.EventType
                    </span>
                    <p class="mt-3 mb-1 text-muted small">
                        <i class="bi bi-geo-alt-fill me-1"></i> @item.EventAddress
                    </p>
                    <h5 class="fw-bold mb-2">@item.EventName</h5>
                    <p class="text-muted small mb-2">
                        <i class="bi bi-calendar-event me-1"></i> @item.StartEvent
                    </p>
                    @{
                        var ticketGroups = item.ShowTimes.SelectMany(e => e.ShowTimeTicketGroups);
                        var minPrice = ticketGroups.Any() ? ticketGroups.Min(x => x.Price) : 0;
                    }
                    <p class="fw-bold text-danger mb-3">@minPrice.ToString("N0") â‚«</p>

                </div>
            </div>
        </a>
    </div>
}